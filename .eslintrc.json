{
  "root": true,
  "env": {
    "node": true,
    "es6": true
  },
  "ignorePatterns": [
    "node_modules",
    "build",
    "coverage"
  ],
  "plugins": [],
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "globals": {
    "BigInt": true,
    "console": true,
    "WebAssembly": true
  },
  "parserOptions": {
    "ecmaVersion": 2022
  },
  "rules": {
    "no-async-promise-executor": "warn",
    "no-inner-declarations": "warn",
    "no-useless-escape": "warn",
    "no-case-declarations": "warn"
  }
}